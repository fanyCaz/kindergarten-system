extends layout

block content
  include partials/admin_header
  div.grid.grid-cols-5
    include side_menu
    div.col-span-4.h-full
      div.grid.grid-cols-2.m-10
        p.m-3.text-3xl.text-green-400="Informacion de niños"
        button.agregab: a(href="http://localhost:3000/admin/ninos") Volver a niños
      div.grid.grid-cols-1.gap-4.justify-items-stretch.m-10.text-lg
        .cajaazul.grid.grid-cols-2
          .nombres
            input#childid.hidden(value=child.id)
            p.font-bold Nombre:
            p= child.firstName + " " + child.lastName
            br
            p.font-bold Alergia:
            p= (child.alergiesDescription) ? child.alergiesDescription : "Sin alergias"
            br
            p.font-bold Padecimientos: 
            p= (child.chronicConditionDescription) ? child.chronicConditionDescription : "Sin padecimientos"
          .datos
            p.font-bold Numero de emergencia:
            p= child.emergencyNumber
        #cancelChild.button.mt-2.py-2.px-2.rounded-full.bg-red-500.text-white.text-center: a(href="#",class="text-white no-underline") Cancelar Inscripcion X
        script(src='/javascripts/cancelar.js')
            
        include partials/cancelar_admin

             