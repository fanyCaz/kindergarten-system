extends layout

block content
  include partials/admin_header
  div.grid.grid-cols-5
    include side_menu
    div.col-span-4.h-full
      div.grid.grid-cols-2.m-10
        p.m-3.text-3xl.text-green-400="Informacion de niños"
        button.agregab: a(href="http://localhost:3000/admin/ninos") Volver a niños
      div.grid.grid-cols-1.gap-4.justify-items-stretch.m-10.text-lg
        .cajaazul.grid.grid-cols-2
          .nombres 
            p Nombre:
            p= child.firstName + " " + child.lastName
            br
            p Alergia:
            p= (child.alergiesDescription) ? child.alergiesDescription : "Sin alergias"
            br
            p Padecimientos: 
            p=child.chronicConditionDescription
          .datos
            p Numero de emergencia:
            p= child.emergencyNumber
            br 
            br
            br
            br
            button.mt-2.py-2.px-12.rounded-full.bg-red-500.text-white: a(href="#",class="text-white no-underline") Cancelar Inscripcion X