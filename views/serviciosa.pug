extends layout

block content
  include partials/admin_header
  div.grid.grid-cols-5
    include side_menu
    div.col-span-4.h-full
      div.grid.grid-cols-2.m-10
        p.m-3.text-3xl.text-green-400= "Agregar un servicio"
      form.formularioserv(action="/admin/add-service" method="POST")
        div.grid.grid-rows-2.justify-items-center.text-lg
          div.grid.gap-x-10
            p Nombre de Servicio
            input(type="text" name="name")
            p Rango de edad permitido
            select(name='age')
              option(value='1-3') 1-3
              option(value='4-6') 4-6
              option(value='7-8') 7-8
            p Costo
            input(type="number" name="cost", min=0)
          input.mt-2.py-2.px-12.rounded-full.bg-green-500.text-white.h-12(type='submit' value='Agregar servicio')